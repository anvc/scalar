# allow access to css/image/js files in views folder and all subdirs
<FilesMatch "\.(css|gif|png|jpe?g|js)$">
	<IfModule authz_core_module>
		Require all granted
	</IfModule>
	<IfModule !authz_core_module>
		Allow from all
	</IfModule>
</FilesMatch>

# allow access to font files in views folder and all subdirs
<FilesMatch "\.(eot|svg|ttf|woff|woff2)$">
	<IfModule authz_core_module>
		Require all granted
	</IfModule>
	<IfModule !authz_core_module>
		Allow from all
	</IfModule>
</FilesMatch>

